<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/wallet_card_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/card_lime_front">

    <TextView
        android:id="@+id/txt_exclude_cards"
        android:text="excludeCards"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/white"
        android:fontFamily="@font/gilroy_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_size_medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txt_account_specification"
        android:text="accountSpecification"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/white"
        android:fontFamily="@font/gilroy_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_size_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txt_stored_id"
        android:text="stored\nId"
        android:textSize="@dimen/text_size_very_small"
        android:textColor="@color/white"
        android:fontFamily="@font/gilroy_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="@dimen/padding_size_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/txt_action"
        android:text="B$5.83"
        android:textSize="@dimen/text_size_very_big"
        android:textColor="@color/white"
        android:fontFamily="@font/gilroy_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>