<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/txt_menu_name"
        android:text="TTTTTTTTTTT"
        android:textColor="@color/black"
        android:textSize="@dimen/text_drawer_menu"
        android:fontFamily="@font/gilroy_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/padding_hor_menu"
        android:paddingVertical="@dimen/padding_ver_menu"/>
    <ListView
        android:id="@+id/list_view_item_drawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:scrollbars="none"/>
</LinearLayout>