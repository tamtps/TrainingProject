<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Theme.AppCompat.DayNight"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gilroy_medium"
        android:paddingHorizontal="@dimen/padding_dialog3"
        android:paddingTop="@dimen/padding_dialog2"
        android:paddingBottom="@dimen/padding_dialog1"
        android:text="Dialog_title"
        android:textColor="@color/black"
        android:textSize="@dimen/text_dialog_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/gilroy_regular"
        android:paddingHorizontal="@dimen/padding_dialog3"
        android:paddingBottom="@dimen/padding_dialog3"
        android:text="Dialog_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_dialog_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_title" />

    <Button
        android:id="@+id/btn_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:text="OK"
        android:textColor="@color/teal_700"
        android:textSize="@dimen/text_dialog_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_content" />

    <Button
        android:id="@+id/btn_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:text="Cancel"
        android:textColor="@color/teal_700"
        android:textSize="@dimen/text_dialog_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_yes"
        app:layout_constraintTop_toBottomOf="@id/dialog_content" />
</androidx.constraintlayout.widget.ConstraintLayout>