<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/padding_size_small">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="@dimen/imageview_medium"
            android:layout_height="@dimen/imageview_medium"
            app:cardCornerRadius="250dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
            <ImageView
                android:id="@+id/img_avatar_menu"
                android:layout_width="@dimen/imageview_medium"
                android:layout_height="@dimen/imageview_medium"
                android:src="@drawable/icon_market"
                android:padding="@dimen/padding_size_very_small"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_name"
            android:text=""
            android:textSize="@dimen/text_size_very_small"
            android:fontFamily="@font/gilroy_regular"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_size_very_small"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/cardView"/>

        <TextView
            android:id="@+id/txt_drawer_point"
            android:text=""
            android:textSize="@dimen/text_size_small"
            android:fontFamily="@font/gilroy_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_size_very_small"
            app:layout_constraintTop_toBottomOf="@id/txt_name"
            app:layout_constraintLeft_toRightOf="@id/cardView"/>

        <TextView
            android:id="@+id/txt_level"
            android:text=""
            android:textSize="@dimen/text_size_very_small"
            android:fontFamily="@font/gilroy_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_size_very_small"
            app:layout_constraintTop_toBottomOf="@id/txt_drawer_point"
            app:layout_constraintLeft_toRightOf="@id/cardView"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ListView
        android:id="@+id/list_view_drawer"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        app:layout_constraintBottom_toTopOf="@id/item_how_to_videos"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/item_how_to_videos"
        android:text="@string/appbar_how_to_video"
        android:textSize="@dimen/text_size_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/text_size_medium"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toBottomOf="@id/list_view_drawer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_about"/>

    <TextView
        android:id="@+id/item_about"
        android:text="@string/item_about"
        android:textSize="@dimen/text_size_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/text_size_medium"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toBottomOf="@id/list_view_drawer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/item_log_out"
        android:text="@string/item_log_out"
        android:textSize="@dimen/text_size_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_about"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>